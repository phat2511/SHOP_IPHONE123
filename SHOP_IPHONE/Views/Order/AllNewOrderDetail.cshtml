@model List<SHOP_IPHONE.Models.OrderItem>
@{
    var orders = ViewBag.Orders as List<SHOP_IPHONE.Models.Order>;
    ViewBag.Title = "Danh sách đơn hàng chờ xử lý";
}

<style>
    .order-card {
        background-color: #e0e0e0;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.25);
        border-radius: 12px;
        padding: 24px;
        margin-bottom: 32px;
    }

    .order-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 16px;
    }

    .order-title {
        font-weight: 600;
        font-size: 18px;
        color: #2c3e50;
    }

    .order-status {
        font-size: 14px;
        background-color: #d1cfcf;
        color: #000;
        padding: 6px 14px;
        border-radius: 20px;
        font-weight: 500;
    }

    .order-info div {
        margin-bottom: 4px;
    }

    .product-table th, .product-table td {
        background-color: #e0e0e0 !important;
        color: #222 !important;
    }

    .approve-btn {
        background-color: #2c3e50;
        color: #fff;
        border: none;
        padding: 10px 16px;
        font-weight: 600;
        border-radius: 6px;
        transition: background-color 0.3s;
        width: 180px;
    }

        .approve-btn:hover {
            background-color: #1f2a35;
        }

    .total-amount {
        font-weight: bold;
        font-size: 16px;
        color: #27ae60;
    }
</style>

<h2 class="fw-bold mb-4" style="color: #333;">📋 Danh sách đơn hàng chờ xử lý</h2>

@foreach (var order in orders)
{
    <div class="order-card">
        <!-- Header -->
        <div class="order-header">
            <div class="order-title">🧾 Đơn hàng #@order.order_id</div>
            <div style="font-weight: 500; font-size: 14px;"> Chờ duyệt</div>
        </div>

        <!-- Thông tin khách hàng -->
        <div class="order-info mb-3">
            <div>👤 <strong>Khách hàng:</strong> @order.customer_name</div>
            <div>📞 <strong>SĐT:</strong> @order.phone</div>
            <div>📍 <strong>Địa chỉ:</strong> @order.address</div>
            <div>📅 <strong>Ngày đặt:</strong> @String.Format("{0:dd/MM/yyyy}", order.order_date)</div>
        </div>

        <!-- Bảng sản phẩm -->
        <div class="table-responsive mb-3">
            <table class="table table-borderless product-table">
                <thead>
                    <tr>
                        <th>Sản phẩm</th>
                        <th class="text-center">Số lượng</th>
                        <th class="text-end">Đơn giá</th>
                        <th class="text-end">Thành tiền</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Where(i => i.order_id == order.order_id))
                    {
                        <tr style="border-bottom: 1px solid #bbb;">
                            <td>@item.Product.product_name</td>
                            <td class="text-center">@item.quantity</td>
                            <td class="text-end">@String.Format("{0:N0}", order.total_amount) VNĐ</td>
                            <td class="text-end fw-bold">@String.Format("{0:N0}", order.total_amount * item.quantity) VNĐ</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Tổng tiền + nút duyệt -->
        <div class="d-flex justify-content-between align-items-center">
            <div class="total-amount">
                💰 Tổng tiền: @String.Format("{0:N0}", order.total_amount) VNĐ
            </div>
            <form action="@Url.Action("ApproveOrder", "Order")" method="post">
                @Html.Hidden("orderId", order.order_id)
                <button type="submit" class="approve-btn">✅ Duyệt đơn</button>
            </form>
        </div>
    </div>
}
<h2>
    @Html.ActionLink("Quay lại", "Manage", "Order", null, new { @class = "btn btn-secondary", style = "text-decoration:none;" })
</h2>
