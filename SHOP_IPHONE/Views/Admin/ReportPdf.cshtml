@{
    Layout = null;
    var bestSellers = ViewBag.BestSellingProducts as List<SHOP_IPHONE.Models.BestSellerViewModel>;
    var orders = ViewBag.OrderDetails as List<SHOP_IPHONE.Models.Order>; // <- danh sách đơn hàng
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Báo cáo PDF</title>
    <style>
        body {
            font-family: Arial;
            font-size: 14px;
            margin: 40px;
        }

        h2 {
            text-align: center;
            color: #333;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            border: 1px solid #ccc;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f5f5f5;
        }

        .summary {
            margin-top: 30px;
        }
    </style>
</head>
<body>
    <h2>BÁO CÁO DOANH THU</h2>

    <div class="summary">
        <p><strong>Đơn đã bán:</strong> @ViewBag.SoldOrders</p>
        <p><strong>Đơn đã hủy:</strong> @ViewBag.CancelledOrders</p>
        <p><strong>Doanh thu:</strong> @String.Format("{0:N0} ₫", ViewBag.Revenue)</p>
        <p><strong>Sản phẩm đã bán:</strong> @ViewBag.SoldProducts</p>
    </div>

    <h4>Top sản phẩm bán chạy</h4>
    <table>
        <thead>
            <tr>
                <th>Sản phẩm</th>
                <th>Số lượng bán</th>
                <th>Đã hủy</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in bestSellers)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.TotalSold</td>
                    <td>@item.CancelledSold</td>
                </tr>
            }
        </tbody>
    </table>

    <h4 style="margin-top:40px;">Chi tiết đơn hàng đã bán</h4>
    <table>
        <thead>
            <tr>
                <th>Mã đơn hàng</th>
                <th>Ngày đặt hàng</th>
                <th>Tổng tiền</th>
            </tr>
        </thead>
        <tbody>
            @if (orders != null)
            {
                foreach (var order in orders)
                {
                    <tr>
                        <td>@order.order_id</td>
                        <td>@order.order_date</td>
                        <td>@String.Format("{0:N0} ₫", order.total_amount)</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</body>
</html>
