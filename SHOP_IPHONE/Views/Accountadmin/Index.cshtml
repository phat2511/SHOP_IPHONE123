@model IEnumerable<SHOP_IPHONE.Models.Account>

@{
    ViewBag.Title = "Danh sách tài khoản";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-3">Danh sách tài khoản</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<p>
    @Html.ActionLink("Thêm tài khoản", "Create", null, new { @class = "btn btn-primary mb-3" })
</p>

<table class="table table-bordered table-striped table-hover">
    <thead>
        <tr>
            <th>Username</th>
            <th>Password</th>
            <th>Email</th>
            <th>Phân quyền</th>
            <th>Trạng thái</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.username</td>
                <td>@item.password</td>
                <td>@item.email</td>
                <td>
                    @if (item.idtype == 1)
                    {
                        <span class="badge bg-info text-dark">User</span>
                    }
                    else
                    {
                        <span class="badge bg-dark">Admin</span>
                    }
                </td>
                <td>
                    @if (item.isLockedByAdmin)
                    {
                        <span class="badge bg-danger">Khóa bởi Admin</span>
                    }
                    else if (item.isLocked)
                    {
                        <span class="badge bg-warning text-dark">Tự khóa</span>
                    }
                    else
                    {
                        <span class="badge bg-success">Đang hoạt động</span>
                    }
                </td>
                <td>
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.account_id }, new { @class = "btn btn-info btn-sm" })
                    @if (item.idtype == 2 )
                    {
                        @:|
                        @Html.ActionLink("Sửa", "Edit", new { id = item.account_id }, new { @class = "btn btn-warning btn-sm" })
                        @:|
                        @Html.ActionLink("Xóa", "Delete", new { id = item.account_id }, new { @class = "btn btn-danger btn-sm" })
                    }
                    @if (item.idtype == 1)
                    {
                        @: |
                        if (item.isLockedByAdmin)
                        {
                            @Html.ActionLink("Mở", "ToggleLockByAdmin", new { id = item.account_id }, new { @class = "btn btn-success btn-sm" })
                        }
                        else
                        {
                            @Html.ActionLink("Khóa", "ToggleLockByAdmin", new { id = item.account_id }, new { @class = "btn btn-secondary btn-sm" })
                        }
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    @Html.ActionLink("Quay lại", "Index", "Admin", null, new { @class = "btn btn-secondary" })
</p>
