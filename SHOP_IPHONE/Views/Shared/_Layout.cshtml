
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Truc xinh iu</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link rel="stylesheet" href="~/Content/Site.css" />
    <link rel="stylesheet" href="~/Content/DanhMuc.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    @RenderSection("Styles", required: false)

</head>
<body>
    @if (ViewBag.HideHeader != true)
    {
        @* HEADER *@

        <header class="custom-header py-3">
            <div class="container d-flex justify-content-between align-items-center py-2">
                <div class="logo-container">
                    <a href="@Url.Action("Index", "Product")">
                        <img src="https://cdn2.fptshop.com.vn/unsafe/640x0/filters:quality(100)/small/mb_logo_fstu_aar_5380a58fe4.png" alt="Mobile Store Logo" class="logo-img" />
                    </a>
                </div>
                <div class="container">
                    <!-- Thanh tìm kiếm -->
                    <div class="search-box d-flex justify-content-center">
                        @using (Html.BeginForm("Search", "Product", FormMethod.Get, new { @class = "search-form d-flex position-relative" }))
                        {
                            <input type="text" name="keyword" class="form-control rounded-pill ps-4" placeholder="Nhập tên điện thoại, máy tính, phụ kiện... cần tìm" />
                            <button type="submit" class="search-button position-absolute rounded-circle">
                                <i class="bi bi-search"></i> Tìm
                            </button>
                        }
                    </div>

                    Gợi ý từ khóa
                    <div class="search-keywords text-center mt-2">
                        <a href="@Url.Action("Search", "Product", new { keyword = "iPhone" })"  class="keyword">iPhone</a>
                        <a href="@Url.Action("Search", "Product", new { keyword = "MacBook" })"  class="keyword">MacBook</a>
                        <a href="@Url.Action("Search", "Product", new { keyword = "Apple Watch" })"  class="keyword">Apple Watch</a>
                        <a href="@Url.Action("Search", "Product", new { keyword = "iPad" })"  class="keyword">iPad</a>
                        <a href="@Url.Action("Search", "Product", new { keyword = "AirPods" })" class="keyword">AirPods</a>
                    </div>
            
                </div>

            </div>
            <div class="auth-links d-flex justify-content-end px-3 py-2" style="margin-top: 10px">
                <a href="/Cart" class="btn btn-outline-primary" btn">🛒</a>
                @if (Session["username"] == null)
                {
                    <a href="@Url.Action("Login", "Account")" class="btn btn-outline-primary me-2" title="Đăng nhập">
                        <i class="fa fa-user" ></i>
                    </a>
                }
                else
                {
                   
                    <div class="dropdown">
                        <button class="btn btn-outline-dark dropdown-toggle" type="button" id="userMenu" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fa fa-user-circle"></i> @Session["username"]
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userMenu">
                            <li>
                                <a class="dropdown-item" href="@Url.Action("UserProfile", "Account")">
                                    <i class="fa fa-user"></i> Thông tin cá nhân
                                </a>
                            </li>


                            @if (Session["role"] != null && Session["role"].ToString() != "2")  // Nếu không phải admin
                            {
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("MyOrders", "Order")">
                                        <i class="fa fa-box"></i> Đơn hàng của tôi
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("Index", "Address")">
                                        <i class="fa fa-map-marker-alt"></i> Sổ địa chỉ nhận hàng
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("Index", "Admin")">
                                        <i class="fa fa-tools"></i> Trang Admin
                                    </a>
                                </li>
                            }
                            @if (Session["role"] != null && (int)Session["role"] == (int)SHOP_IPHONE.Models.AccountType.Admin)
                            {
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("Index", "Voucher")">
                                        <i class="fa fa-ticket-alt"></i> Quản lý Voucher
                                    </a>
                                </li>
                            }
                            <li><hr class="dropdown-divider" /></li>

                            <li>
                                <a class="dropdown-item text-danger" href="@Url.Action("Logout", "Account")">
                                    <i class="fa fa-sign-out-alt"></i> Đăng xuất
                                </a>
                            </li>
                        </ul>
                    </div>
                }

                <style>
                    .auth-links {
                        position: absolute;
                        top: 10px;
                        right: 20px;
                        z-index: 1000;
                    }

                        .auth-links .btn {
                            margin-left: 5px;
                            padding: 5px 10px;
                            font-size: 14px;
                        }

                        .auth-links span {
                            font-weight: bold;
                        }
                </style>
            </div>
            <style>
                .logo-container {
                    display: flex;
                    align-items: center;
                    justify-content: center;
                }

                .logo-img {
                    height: 70px;
                    width: 350px;
                    object-fit: contain;
                  
                }

                .auth-links {
                    position: absolute;
                    top: 10px;
                    right: 20px;
                    z-index: 1000;
                }

                    .auth-links .btn {
                        margin-left: 5px;
                        padding: 5px 10px;
                        font-size: 14px;
                        background-color: black;
                    }

                    .auth-links span {
                        font-weight: bold;
                    }

                .cart-iconCart {
                    background-color: black;
                    color: white;
                    border: none;
                    font-size: 17px;
                    padding: 6px 12px;
                    border-radius: 8px;
                    transition: transform 0.3s ease;
                }

                    .cart-iconCart:hover {
                        transform: scale(1.1);
                        background-color: #333;
                    }

                .search-button {
                    right: 6px;
                    top: 50%;
                    transform: translateY(-50%);
                    border: none;
                    background-color: black;
                    color: white;
                    width: 36px;
                    height: 36px;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    box-shadow: 0 0 4px rgba(0,0,0,0.1);
                }

                .search-keywords {
                    font-size: 14px;
                    
                }

                    .search-keywords .keyword {
                        color: white;
                        margin: 0 10px;
                        text-decoration: none;
                    }

                        .search-keywords .keyword:hover {
                            text-decoration: underline;
                        }

                .custom-header {
                    background: linear-gradient(to right, #111827, #111827);
                    color: #111827;
                    position: relative;
                }

                .search-form {
                    position: relative;
                }

                    .search-form input.form-control {
                        width:600px;
                        height: 48px;
                        border: none;
                        font-size: 14px;
                    }

                .admin-icon-link {
                    border: none !important;
                    background: transparent;
                    padding: 0;
                }

                    .admin-icon-link i {
                        font-size: 30px;
                        color: white;
                        transition: transform 0.3s ease;
                    }

                        .admin-icon-link i:hover {
                            transform: scale(1.2);
                            color: #ffd700;
                        }

                .Chinhsach {
                    color: white;
                    margin: 0 10px;
                    text-decoration: none;
                }
            </style>
        </header>
    }


    <!-- BANNER -->
    @RenderSection("Banner", required: false)

    <!-- NỘI DUNG CHÍNH -->
    <main class="container py-4">
        @RenderBody()
    </main>

