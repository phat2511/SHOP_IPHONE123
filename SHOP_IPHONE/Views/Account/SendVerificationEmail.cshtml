@{
    ViewBag.Title = "Xác thực Email";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Xác thực Email</h2>
@using (Html.BeginForm("VerifyEmail", "Account", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Mã OTP")
        @Html.TextBox("otp", null, new { @class = "form-control", placeholder = "Nhập mã OTP" })
        @if (ViewBag.Error != null)
        {
            <span class="text-danger">@ViewBag.Error</span>
        }
    </div>
    <button type="submit" class="btn btn-primary mt-2">Xác nhận</button>
}
