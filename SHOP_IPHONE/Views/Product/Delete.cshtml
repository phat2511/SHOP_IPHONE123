
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model SHOP_IPHONE.Models.Product

<h2>Xác nhận xóa sản phẩm</h2>

<div class="alert alert-warning">
    <i class="fa fa-exclamation-triangle"></i>
    <strong>Lưu ý:</strong> Hệ thống sẽ kiểm tra xem sản phẩm này có đơn hàng hoặc đánh giá nào không trước khi xóa.
</div>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">@Model.product_name</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">Mã sản phẩm:</dt>
            <dd class="col-sm-9">@Model.product_id</dd>

            <dt class="col-sm-3">Giá:</dt>
            <dd class="col-sm-9">@String.Format("{0:N0}", Model.price) ₫</dd>

            <dt class="col-sm-3">Số lượng tồn:</dt>
            <dd class="col-sm-9">@Model.stock</dd>

            <dt class="col-sm-3">Mô tả:</dt>
            <dd class="col-sm-9">@Model.description</dd>
        </dl>

        <div class="alert alert-info">
            <i class="fa fa-info-circle"></i>
            <strong>Điều kiện xóa:</strong>
            <ul class="mb-0 mt-2">
                <li>Sản phẩm không được có đơn hàng nào</li>
                <li>Sản phẩm không được có đánh giá nào</li>
            </ul>
        </div>
    </div>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="mt-3">
        <button type="submit" class="btn btn-danger">
            <i class="fa fa-trash"></i> Xác nhận xóa
        </button>
        @Html.ActionLink("Hủy", "Index1", "Product", null, new { @class = "btn btn-secondary" })
    </div>
}


