@model SHOP_IPHONE.Models.Address

@{
    ViewBag.Title = "Chỉnh sửa địa chỉ";
}

<h2>Chỉnh sửa địa chỉ</h2>

@using (Html.BeginForm())
{
    @Html.HiddenFor(m => m.AddressId)
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(m => m.RecipientName)
        @Html.TextBoxFor(m => m.RecipientName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Phone)
        @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Detail)
        @Html.TextBoxFor(m => m.Detail, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
    @Html.ActionLink("Hủy", "Index", null, new { @class = "btn btn-secondary" })
}
